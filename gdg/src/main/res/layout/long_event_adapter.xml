<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardUseCompatPadding="true"
    android:foreground="?selectableItemBackground"
    app:cardBackgroundColor="@color/cardsColor"
    android:id="@+id/card_long_adapter"
    android:layout_height="230dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
       android:padding="5dp"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/image_long_adapter"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="140dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/image_long_adapter"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            tools:text="DevFest 2014"
            android:id="@+id/long_adapter_event_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            tools:text="5-Nov-2017"
            android:id="@+id/long_adapter_event_date"
            app:layout_constraintHorizontal_bias=".9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/long_adapter_event_date"
            app:layout_constraintTop_toBottomOf="@id/image_long_adapter" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_marginTop="5dp"
            android:id="@+id/long_adapter_extra_details"
            tools:text="Here we will place the dummy introduction of the Event that is being organised"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintStart_toEndOf="@id/long_adapter_event_date"
            app:layout_constraintTop_toBottomOf="@id/long_adapter_event_date" />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>
