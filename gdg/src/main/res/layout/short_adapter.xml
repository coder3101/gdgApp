<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/cardsColor"
    android:foreground="?selectableItemBackground"
    android:layout_width="match_parent"
    android:id="@+id/short_adapter_card"
    android:clickable="true"
    app:cardUseCompatPadding="true"
    android:layout_height="210dp"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:id="@+id/short_adapter_image"
        android:src="@mipmap/app_icon"
        android:scaleType="fitXY"
        android:contentDescription="@string/app_name_long" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/short_adapter_image"
            android:textColor="@android:color/black"
            android:maxLines="1"
            tools:text="DevFest 2017"
            android:id="@+id/short_adapter_title"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:maxLines="1"
            tools:text="5-Nov-2017"
            android:layout_below="@id/short_adapter_title"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:id="@+id/short_adapter_date"
            android:layout_marginTop="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:maxLines="1"
            android:layout_below="@id/short_adapter_title"
            tools:text="Lovely Professional University"
            android:id="@+id/short_adapter_venue"
            android:layout_marginTop="4dp"
            android:layout_marginStart="10dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>