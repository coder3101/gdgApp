<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/cardsColor"
    android:foreground="?selectableItemBackground"
    android:layout_width="wrap_content"
    android:id="@+id/short_adapter_card"
    android:clickable="true"
    android:layout_height="wrap_content"
    android:focusable="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/short_adapter_image"
        android:src="@mipmap/app_icon"
        android:contentDescription="@string/app_name_long" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:maxLines="1"
            android:id="@+id/short_adapter_title"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:maxLines="1"
            android:id="@+id/short_adapter_date"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

</android.support.v7.widget.CardView>